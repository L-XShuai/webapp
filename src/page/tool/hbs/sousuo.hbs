<style type="text/css">
.sousuo-box{
width: 80%;
margin: 15px auto;
}
.m-from1{
position: relative;
box-shadow: 0 0 100px 0 rgba(0, 0, 0, .25) !important;
margin: 6px auto;
margin-top: 0;
}
.m-from1 .m-str{height: 54px;background: #f4f4f4;border: 0;display: block;text-indent: 1em;color: #777;font-size: 15px;width: 100%;}
.m-from1 .m-btn{text-align: center;display: block;padding:0 30px;height: 54px;line-height:54px;background: #4caf50;float: right;position: absolute;top: 0;right: 0;font-size: 15px;width: 100px;}

.m-tab{
	/*height: 30px;*/
	overflow: hidden;line-height: 30px;
}
.m-tab a{
	font-family: Tahoma,Arial,'Helvetica Neue',"Microsoft YaHei New","Microsoft Yahei","微软雅黑","宋体",Simsum,STXihei,"华文细黑",sans-serif;
	font-size: 16px;
	color: #000;
	display: inline-block;
	*display: inline;
	*zoom: 1;
	float: left;
	padding: 3px 25px;
}
.m-tab .tab-on,.m-tab a:hover{
	color: #fff;
	background: #4caf50;
}
.m-tab .on{color: #4caf50;}

.m-radio p{
	padding: 15px 0;
	font-size: 16px;
	color: #000;
	display: inline-block;
	*display: inline;
	*zoom: 1;
}
.so-logo{
	display: block;margin: 15px auto;
}
.rpt{margin-right: 3px;}
</style>
 <div class="sousuo-box">
 	<img src="{{sologo}}" class="so-logo">
 	<div class="m-tab" id="mtab">
 		<a href="#" class="tab-on">聚合搜索</a>
		{{#each soData}}
			<a id="{{key}}" href="#">{{text}}</a>
		{{/each}}
	</div>
	<div class="m-from1">
	   <input type="text" class="m-str" name="str" id="mstr">
	   <a href="#" class="m-btn" id="toSo">搜索</a>
	</div>
	<div class="m-radio" id="m-radio">
		{{#each soData}}
			<p id="{{key}}-radio" style="display: none;">
					 {{#each val}}
						<input type="radio" class='rpt' name="want" value="{{url}}" {{isChecked}}>{{title}}
					{{/each}}
				</p>
		{{/each}}
	</div>
 </div>